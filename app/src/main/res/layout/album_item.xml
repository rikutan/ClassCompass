<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/album_view"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/album_create_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.classcompass.classIconImageView
        android:id="@+id/album_photo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/album_view"
        app:layout_constraintStart_toStartOf="@+id/album_view"
        app:layout_constraintTop_toTopOf="@+id/album_view"
        app:srcCompat="@drawable/defaultclassicon" />

    <TextView
        android:id="@+id/album_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="作成日: 2003年05月30日"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/album_view"
        app:layout_constraintStart_toStartOf="@+id/album_view"
        app:layout_constraintTop_toBottomOf="@+id/album_photo" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/album_view"
        app:layout_constraintEnd_toEndOf="@+id/album_view"
        app:layout_constraintStart_toStartOf="@+id/album_view"
        app:layout_constraintTop_toBottomOf="@+id/album_date" />

</androidx.constraintlayout.widget.ConstraintLayout>